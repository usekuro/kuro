  # Sample backup script
  - path: /scripts/backup.sh
    content: |
      #!/bin/bash
      # {{ .context.serverName }} Backup Script
      # Generated: {{ now }}

      echo "ðŸ”„ Starting backup process..."
      echo "Server: {{ .context.serverName }} v{{ .context.version }}"
      echo "Timestamp: {{ now }}"

      # Configuration
      BACKUP_DIR="/backups/$(date +%Y%m%d_%H%M%S)"
      SOURCE_DIRS=(
          "/shared/public"
          "/shared/projects"
          "/shared/documents"
          "/config"
          "/logs"
      )

      # Create backup directory
      echo "ðŸ“ Creating backup directory: $BACKUP_DIR"
      mkdir -p "$BACKUP_DIR"

      # Backup shared folders
      for dir in "${SOURCE_DIRS[@]}"; do
          if [ -d "$dir" ]; then
              echo "ðŸ“¦ Backing up: $dir"
              cp -r "$dir" "$BACKUP_DIR/"
              echo "âœ… Completed: $dir"
          else
              echo "âš ï¸  Directory not found: $dir"
          fi
      done

      # Backup user home directories
      {{ range .context.users }}
      if [ -d "{{ .home_dir }}" ]; then
          echo "ðŸ‘¤ Backing up user: {{ .username }}"
          cp -r "{{ .home_dir }}" "$BACKUP_DIR/home_{{ .username }}"
          echo "âœ… User backup completed: {{ .username }}"
      fi
      {{ end }}

      # Create manifest
      echo "ðŸ“‹ Creating backup manifest..."
      cat > "$BACKUP_DIR/manifest.txt" << EOF
      Backup Manifest
      ===============
      Server: {{ .context.serverName }} v{{ .context.version }}
      Created: {{ now }}
      Type: Full System Backup

      Directories Backed Up:
      {{ range .context.shared_folders }}
      - {{ .path }} ({{ .size_mb }} MB)
      {{ end }}

      User Directories:
      {{ range .context.users }}
      - {{ .home_dir }} ({{ .username }} - {{ .quota_mb }} MB quota)
      {{ end }}

      Configuration Files:
      - /config/server.conf
      - /security/audit.log
      - /logs/transfer.log

      Status: âœ… COMPLETED
      EOF

      # Calculate backup size
      BACKUP_SIZE=$(du -sh "$BACKUP_DIR" | cut -f1)
      echo "ðŸ“Š Backup size: $BACKUP_SIZE"
      echo "âœ… Backup completed successfully!"
      echo "ðŸ“ Location: $BACKUP_DIR"

      # Cleanup old backups (keep last 7 days)
      find /backups -type d -name "*_*" -mtime +7 -exec rm -rf {} \;
      echo "ðŸ§¹ Cleaned up old backups"

      echo "ðŸŽ‰ Backup process finished at $(date)"

